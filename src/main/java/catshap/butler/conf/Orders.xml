<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="orders">

	<select id="selectProductPrice" parameterType="int" resultType="ProductPrice">
		select *
		from prodPrice
		where prodNo=#{prodNo}
	</select>

	<insert id="insertOrders" parameterType="Orders" useGeneratedKeys="true" keyProperty="ordNo">
		<selectKey keyProperty="ordNo" resultType="int" order="AFTER">
            SELECT seq_ordNo.currval FROM dual
        </selectKey>
		insert into orders
		values (seq_ordNo.nextval, #{userNo}, sysdate, #{ordTotalPrice}, #{ordStatus})
	</insert>
	
	<insert id="insertOrderProduct" parameterType="OrderProduct">
		insert into orderProduct
		values (seq_ordProdNo.nextval, #{prodNo}, #{ordNo}, #{ordProdAmt}, #{ordProdPrice})
	</insert>
	
</mapper>
